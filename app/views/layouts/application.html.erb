<!DOCTYPE html>
<html>
  <head>
    <title>RecordCollectorsClub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Explore", explore_records_users_path %>
      <%= link_to "My Collection", records_users_path %>
      <%= link_to "Add to My Collection", new_records_user_path %>

      <%= link_to "Artist Overview - Download Record Collection's Stats", artist_overview_records_path(format: :csv) %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>

    <% else %>
      <%= link_to "Log In", new_user_session_path %>   
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
